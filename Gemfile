# define our source to loook for gems
source "http://rubygems.org/"

# declare the sinatra dependency
gem "sinatra"
gem "sinatra-contrib"
gem "rerun"
gem "activesupport"
gem "racksh"
gem 'require_all'

group :development do
  gem "pry"
  gem "thor"
end

# setup our test group and require rspec
group :test do
  gem "rspec"
end
